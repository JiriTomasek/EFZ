
@using EFZ.Resources
@using Microsoft.Data.SqlClient.DataClassification
@model EFZ.WebApplication.Models.AccountViewModels.LoginViewModel

<div data-role="page">
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</div>


<form id="LoginForm" method="post" onsubmit="LoginFormSubmit(event)">
    @Html.AntiForgeryToken()
    <div class="modal-header">

    </div>

    <div class="modal-body">

        <p id="messageToClient" class="text-danger"></p>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">

            <input asp-for="Email" placeholder="@Labels.valEmail" class="form-control" required="required" />
            <span asp-validation-for="Email" class="text-danger"></span>

        </div>

        <div class="form-group">
            <input asp-for="Password" class="form-control" placeholder="@Labels.valPassword" required="required" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="RememberMeCheckBox" asp-for="RememberMe">
            <label class="form-check-label" for="RememberMeCheckBox">@Labels.valRememberMe</label>
        </div>
        <span class="text-danger">
            <span id="LoginErrorMessageSpan">

            </span>
        </span>
    </div>
    <div class="modal-footer modal-footer-login">
        <button type="submit" class="btn btn-primary btn-green btn-block">@Labels.valLoginBtn</button>
        <div class="login-form-wrapper">

            <button type="button" class="btn btn-none btn-close" data-title="@Labels.valRegister" data-url="@Url.Action("Register", "Account")">@Labels.valRegister</button>
        </div>

    </div>

</form>
