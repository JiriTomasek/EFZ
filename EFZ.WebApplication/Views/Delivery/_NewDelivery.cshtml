@using EFZ.Resources
@using Newtonsoft.Json
@model EFZ.WebApplication.Models.Delivery.DeliveryVm
<div data-role="page">
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</div>

<form id="NewDeliveryForm" method="post">

    <input asp-for="CustomerId" type="hidden" />
    <input asp-for="OrderId" type="hidden" />
    @*<input id="RolesIds" type="hidden" />*@

    <div class="modal-header">

    </div>
    <div class="modal-body">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-4">

                <div class="form-group">
                    <label asp-for="CustomerId" class="control-label"></label>
                    <div class="select-wrapper">
                        <span class="customer-single-select"></span>
                    </div>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="OrderId" class="control-label"></label>
                    <div class="select-wrapper">
                        <span class="order-single-select"></span>
                    </div>
                    <span asp-validation-for="OrderId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="OrderNumber" class="control-label"></label>
                    <input asp-for="OrderNumber" type="number" class="form-control" readonly="readonly" />
                    <span asp-validation-for="OrderNumber" class="text-danger"></span>
                </div>




            </div>
            <div class="col-4">

                <div class="form-group">
                    <label asp-for="DeliveryNumber" class="control-label"></label>
                    <input asp-for="DeliveryNumber" type="number" class="form-control" />
                    <span asp-validation-for="DeliveryNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeliveryDate" class="control-label"></label>
                    <input asp-for="DeliveryDate" type="date" class="form-control" />
                    <span asp-validation-for="DeliveryDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeliveryAll" class="control-label"></label>
                    <input asp-for="DeliveryAll" type="checkbox" class="form-control" min="0" />
                    <span asp-validation-for="DeliveryAll" class="text-danger"></span>
                </div>




            </div>
            @*<div class="col-7">
                <button id="newOrderDetail" type="button" class="btn btn-danger">@Labels.valNewOrderDetail</button>
                <table class="table table-responsive-md table-sm table-bordered" id="orderDetailsTable">
                    <thead>
                        <tr name="header">
                            <th name="ProductName">@Html.Raw(Labels.valProductName)</th>
                            <th name="Quantity">@Html.Raw(Labels.ValQuantity)</th>
                            <th name="UnitPrice">@Html.Raw(Labels.valUnitPrice)</th>
                            <th name="Discount">@Html.Raw(Labels.valDiscount)</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>*@
        </div>




    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary btn-close" data-dismiss="modal">@Html.Raw(Labels.valClose)</button>
        <input type="submit" class="btn btn-primary" value="@Html.Raw(Labels.valSave)" />
    </div>
</form>

<script>


    setDeliveryOrderSelect(@Json.Serialize(@LabelsMessages.valOrderSelect), []);


    setDeliveryCustomerSelect(@Json.Serialize(@LabelsMessages.valCustomerSelect), @Json.Serialize(@ViewBag.Customers));




    //$('#orderDetailsTable').SetEditable({ $addButton: $('#newOrderDetail')});
</script>